<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticalWork_2.RegisterPage"
             Title="UFV_Conversor">
<ScrollView>
    <Grid>
        <Button Text="Exit" 
                HorizontalOptions="End" 
                VerticalOptions="Start"
                Margin="0,10,10,0"
                Clicked="ExitButton_Clicked" />
        
        <VerticalStackLayout VerticalOptions="Center" 
                             HorizontalOptions="Center" 
                             WidthRequest="400"
                             Spacing="0">
            
            <Frame BackgroundColor="#375D81" 
                   Padding="20"
                   HasShadow="False"
                   CornerRadius="0">
                <Label Text="OOP Conversor" 
                       FontSize="32" 
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </Frame>
            
            <Frame BackgroundColor="#E0E0E0" 
                   Padding="20"
                   HasShadow="False"
                   CornerRadius="0">
                <VerticalStackLayout Spacing="20">
                    
                    <Label Text="Create Account" 
                           FontSize="24" 
                           HorizontalOptions="Center"
                           Margin="0,0,0,10"/>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Username" 
                               FontSize="18"/>
                        <Frame Padding="10" 
                               BackgroundColor="White" 
                               BorderColor="Transparent" 
                               HasShadow="False"
                               CornerRadius="0">
                            <Entry Placeholder="Enter your username" 
                                   x:Name="UsernameEntry"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Email" 
                               FontSize="18"/>
                        <Frame Padding="10" 
                               BackgroundColor="White" 
                               BorderColor="Transparent" 
                               HasShadow="False"
                               CornerRadius="0">
                            <Entry Placeholder="Enter your email" 
                                   Keyboard="Email"
                                   x:Name="EmailEntry"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Password" 
                               FontSize="18"/>
                        <Frame Padding="10" 
                               BackgroundColor="White" 
                               BorderColor="Transparent" 
                               HasShadow="False"
                               CornerRadius="0">
                            <Entry Placeholder="Enter your password" 
                                   IsPassword="True"
                                   x:Name="PasswordEntry"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Confirm Password" 
                               FontSize="18"/>
                        <Frame Padding="10" 
                               BackgroundColor="White" 
                               BorderColor="Transparent" 
                               HasShadow="False"
                               CornerRadius="0">
                            <Entry Placeholder="Confirm your password" 
                                   IsPassword="True"
                                   x:Name="ConfirmPasswordEntry"/>
                        </Frame>
                    </VerticalStackLayout>

                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Start" Margin="0,10,0,0">
                        <CheckBox x:Name="PolicyCheckBox"/>
                        <Label Text="I agree to the " VerticalOptions="Center"/>
                        <Label Text="Protection Policy" 
                               TextColor="Blue" 
                               TextDecorations="Underline"
                               VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="PolicyTerms_Tapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>
                    
                    <Button Text="SIGN UP" 
                            BackgroundColor="#BBBBBB"
                            TextColor="White"
                            FontAttributes="Bold"
                            WidthRequest="150"
                            HorizontalOptions="Center"
                            Margin="0,10,0,0"
                            Clicked="SignUpButton_Clicked"/>
                    
                    <Label Text="Already have an account? Sign In" 
                           TextColor="Blue" 
                           HorizontalOptions="Center"
                           FontSize="16"
                           TextDecorations="Underline"
                           Margin="0,10,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="SignIn_Tapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </Grid>
</ScrollView>
</ContentPage>