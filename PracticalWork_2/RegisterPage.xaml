<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="PracticalWork_2.RegisterPage"
          Title="UFV_Conversor">
<ScrollView>
<Grid>
<!-- VerticalOptions="FillAndExpand" para asegurar que los elementos se expandan -->
<Grid RowDefinitions="Auto, *">
<Grid Grid.Row="0" ColumnDefinitions="*, Auto" Padding="0,10,10,0">
<Label Grid.Column="0" Text="UFV_Conversor" FontSize="20" VerticalOptions="Center" Margin="10,0,0,0"/>
<Button Grid.Column="1" Text="Exit" Clicked="ExitButton_Clicked"/>
</Grid>
        <!-- Contenido principal -->
        <VerticalStackLayout Grid.Row="1" Spacing="0">
            
            <!-- Encabezado con tÃ­tulo -->
            <Frame BackgroundColor="#375D81" 
                   Padding="20"
                   HasShadow="False"
                   CornerRadius="0">
                <Label Text="OOP Conversor" 
                       FontSize="32" 
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </Frame>
            
            <!-- Panel principal del registro -->
            <Frame BackgroundColor="#E0E0E0" 
                   HasShadow="False"
                   Padding="20"
                   VerticalOptions="FillAndExpand">
                <VerticalStackLayout Spacing="20">
                    
                    <Label Text="Create Account" 
                           FontSize="24" 
                           HorizontalOptions="Center"
                           Margin="0,0,0,10"/>

                     <VerticalStackLayout Spacing="5">
                        <Label Text="Name" 
                               FontSize="18"/>
                        <Frame Padding="10" 
                               BackgroundColor="White" 
                               BorderColor="Transparent" 
                               HasShadow="False"
                               CornerRadius="0">
                            <Entry Placeholder="Enter your name" 
                                   x:Name="NameEntry"/>
                        </Frame>
                    </VerticalStackLayout>                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Username" 
                               FontSize="18"/>
                        <Frame Padding="10" 
                               BackgroundColor="White" 
                               BorderColor="Transparent" 
                               HasShadow="False"
                               CornerRadius="0">
                            <Entry Placeholder="Enter your username" 
                                   x:Name="UsernameEntry"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Email" 
                               FontSize="18"/>
                        <Frame Padding="10" 
                               BackgroundColor="White" 
                               BorderColor="Transparent" 
                               HasShadow="False"
                               CornerRadius="0">
                            <Entry Placeholder="Enter your email" 
                                   Keyboard="Email"
                                   x:Name="EmailEntry"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Password" 
                               FontSize="18"/>
                        <Frame Padding="10" 
                               BackgroundColor="White" 
                               BorderColor="Transparent" 
                               HasShadow="False"
                               CornerRadius="0">
                            <Entry Placeholder="Enter your password" 
                                   IsPassword="True"
                                   x:Name="PasswordEntry"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Confirm Password" 
                               FontSize="18"/>
                        <Frame Padding="10" 
                               BackgroundColor="White" 
                               BorderColor="Transparent" 
                               HasShadow="False"
                               CornerRadius="0">
                            <Entry Placeholder="Confirm your password" 
                                   IsPassword="True"
                                   x:Name="ConfirmPasswordEntry"/>
                        </Frame>
                    </VerticalStackLayout>

                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Start" Margin="0,10,0,0">
                        <CheckBox x:Name="PolicyCheckBox"/>
                        <Label Text="I agree to the " VerticalOptions="Center"/>
                        <Label Text="Protection Policy" 
                               TextColor="Blue" 
                               TextDecorations="Underline"
                               VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="PolicyTerms_Tapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>
                    
                    <Button Text="SIGN UP" 
                            BackgroundColor="#BBBBBB"
                            TextColor="White"
                            FontAttributes="Bold"
                            WidthRequest="150"
                            HorizontalOptions="Center"
                            Margin="0,10,0,0"
                            Clicked="SignUpButton_Clicked"/>

                    <Button Text="BACK" 
                        BackgroundColor="#BBBBBB"
                        TextColor="White"
                        FontAttributes="Bold"
                        WidthRequest="150"
                        HorizontalOptions="Center"
                        Margin="0,20,0,0"
                        Clicked="BackButton_Clicked"/>
                </VerticalStackLayout>

                
            </Frame>
        </VerticalStackLayout>
    </Grid>
</Grid>
</ScrollView>
</ContentPage>