<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticalWork_2.LoginPage"
             Title="UFV_Conversor">
<ScrollView>
    <Grid>
        <Button Text="Exit" 
                HorizontalOptions="End" 
                VerticalOptions="Start"
                Margin="0,10,10,0"
                Clicked="ExitButton_Clicked" />
        
        <VerticalStackLayout VerticalOptions="Center" 
                             HorizontalOptions="Center" 
                             WidthRequest="400"
                             Spacing="0">
            
            <Frame BackgroundColor="#375D81" 
                   Padding="20"
                   HasShadow="False"
                   CornerRadius="0">
                <Label Text="OOP Conversor" 
                       FontSize="32" 
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </Frame>
            
            <Frame BackgroundColor="#E0E0E0" 
                   Padding="20"
                   HasShadow="False"
                   CornerRadius="0">
                <VerticalStackLayout Spacing="20">
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Username" 
                               FontSize="18"/>
                        <Frame Padding="10" 
                               BackgroundColor="White" 
                               BorderColor="Transparent" 
                               HasShadow="False"
                               CornerRadius="0">
                            <Entry Placeholder="Enter your username" 
                                   x:Name="UsernameEntry"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Password" 
                               FontSize="18"/>
                        <Frame Padding="10" 
                               BackgroundColor="White" 
                               BorderColor="Transparent" 
                               HasShadow="False"
                               CornerRadius="0">
                            <Entry Placeholder="Enter your password" 
                                   IsPassword="True"
                                   x:Name="PasswordEntry"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <Button Text="Forgot Password?" 
                            BackgroundColor="Transparent"
                           TextColor="Blue" 
                           HorizontalOptions="Center"
                           FontSize="16"
                           Margin="0,10,0,0"
                           Clicked="ForgotPassword_Clicked"/>
                    
                    <Button Text="SIGN IN" 
                            BackgroundColor="#BBBBBB"
                            TextColor="White"
                            FontAttributes="Bold"
                            WidthRequest="150"
                            HorizontalOptions="Center"
                            Margin="0,10,0,0"
                            Clicked="SignInButton_Clicked"/>

                    <Label Text="Don't have an account? Sign Up" 
                           TextColor="Blue" 
                           HorizontalOptions="Center"
                           FontSize="16"
                           TextDecorations="Underline"
                           Margin="0,10,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="SignUp_Tapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </Grid>
</ScrollView>
</ContentPage>