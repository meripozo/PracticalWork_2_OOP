<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="PracticalWork_2.LoginPage"
          Title="UFV_Conversor">
<ScrollView>
<Grid>
<!-- VerticalOptions="FillAndExpand" para asegurar que los elementos se expandan -->
<Grid RowDefinitions="Auto, *">
<Grid Grid.Row="0" ColumnDefinitions="*, Auto" Padding="0,10,10,0">
<Label Grid.Column="0" Text="UFV_Conversor" FontSize="20" VerticalOptions="Center" Margin="10,0,0,0"/>
<Button Grid.Column="1" Text="Exit" Clicked="ExitButton_Clicked"/>
</Grid>
        <!-- Contenido principal -->
        <VerticalStackLayout Grid.Row="1" Spacing="0">
            
            <!-- Encabezado con título -->
            <Frame BackgroundColor="#375D81" 
                   Padding="20"
                   HasShadow="False"
                   CornerRadius="0">
                <Label Text="OOP Conversor" 
                       FontSize="32" 
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </Frame>
            
            <!-- Panel principal del login -->
            <Frame BackgroundColor="#E0E0E0" 
                   HasShadow="False"
                   Padding="20"
                   VerticalOptions="FillAndExpand">
                <VerticalStackLayout Spacing="20">
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Username" 
                               FontSize="18"/>
                        <Frame Padding="10" 
                               BackgroundColor="White" 
                               BorderColor="Transparent" 
                               HasShadow="False"
                               CornerRadius="0">
                            <Entry Placeholder="Enter your username" 
                                   x:Name="UsernameEntry"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Password" 
                               FontSize="18"/>
                        <Frame Padding="10" 
                               BackgroundColor="White" 
                               BorderColor="Transparent" 
                               HasShadow="False"
                               CornerRadius="0">
                            <Entry Placeholder="Enter your password" 
                                   IsPassword="True"
                                   x:Name="PasswordEntry"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <Button Text="Forgot Password?" 
                            BackgroundColor="Transparent"
                            TextColor="Blue" 
                            HorizontalOptions="Center"
                            FontSize="16"
                            Margin="0,10,0,0"
                            Clicked="ForgotPassword_Clicked"/>
                    
                    <Button Text="SIGN IN" 
                            BackgroundColor="#BBBBBB"
                            TextColor="White"
                            FontAttributes="Bold"
                            WidthRequest="150"
                            HorizontalOptions="Center"
                            Margin="0,10,0,0"
                            Clicked="SignInButton_Clicked"/>

                    <Label Text="Don't have an account? Sign Up" 
                           TextColor="Blue" 
                           HorizontalOptions="Center"
                           FontSize="16"
                           TextDecorations="Underline"
                           Margin="0,10,0,0">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="SignUp_Tapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </Grid>
</Grid>
</ScrollView>
</ContentPage>